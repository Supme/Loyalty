<form class="form-horizontal" method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Add user</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="login">Login</label>
            <div class="col-md-5">
                <input id="login" name="login" type="text" placeholder="Login" class="form-control input-md" required="">
                <span class="help-block">User login</span>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="email">Email</label>
            <div class="col-md-5">
                <input id="email" name="email" type="text" placeholder="email@company.com" class="form-control input-md" required="">
                <span class="help-block">User email address</span>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="name">Name</label>
            <div class="col-md-5">
                <input id="name" name="name" type="text" placeholder="Michael Jackson" class="form-control input-md">
                <span class="help-block">User name</span>
            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="password">Password</label>
            <div class="col-md-4">
                <input id="password" name="password" type="password" placeholder="pa55w0rd" class="form-control input-md" required="">
                <span class="help-block">User password</span>
            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="group">User group</label>
            <div class="col-md-4">
                <select id="group" name="group" class="form-control">
                    {% for group in groups %}
                        <option value="{{ group.id }}">{{ group.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="add"></label>
            <div class="col-md-4">
                <button id="add" name="add" class="btn btn-default">Add</button>
            </div>
        </div>

    </fieldset>
</form>
