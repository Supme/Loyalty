<div id="page-wrapper">
    <div class="container-fluid">

<form method="POST" class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>КнутоПряник</legend>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="name">Имя</label>
            <div class="col-md-4">
                <select id="name" name="name" class="form-control">
                    {% for people in peoples %}
                    <option value="{{ people.id }}">{{ people.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <!-- Multiple Radios
        <div class="form-group">
            <label class="col-md-4 control-label" for="method"></label>
            <div class="col-md-4">
                <div class="radio">
                    <label for="method-0">
                        <input type="radio" name="method" id="method-0" value="1" checked="checked">
                        <img src="/img/cake/prwoman.png" height="135px"/>
                    </label>
                </div>
                <div class="radio">
                    <label for="method-1">
